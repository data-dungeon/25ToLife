
.macro INIT_DEBUG
	NOP ISW.y	VI01, 0(VI00)

	NOP IADDIU	VI01, VI00, 0
	NOP ISW.z	VI01, 0(VI00)
.endm

.macro CLEANUP_DEBUG
	NOP ILW.y	VI01, 0(VI00)
	NOP NOP
	NOP NOP
	NOP NOP
	NOP[T] NOP
	NOP NOP
	NOP NOP
	NOP NOP
.endm

.macro DEBUG_REG reg
	INIT_DEBUG
	NOP IADDIU	VI01, VI00, 1
	NOP ISW.z	VI01, 0(VI00)
	NOP IADDIU	VI01, VI00, \reg
	NOP ISW.w	VI01, 0(VI00)
	CLEANUP_DEBUG
.endm



